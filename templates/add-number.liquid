{% layout "layout/default-layout.liquid", title: 'Add phone' %}

<form id="form"
      class="form"
      action="/telephone-book-add"
      method="post">

    <div class="form__item">
        <label class="form__label"
               for="number"
        >
        </label>
        <input class="form__input"
               type="tel"
               id="number"
               name="number"
               placeholder="Phone Number"
               required
        >
    </div>

    <div class="form__item">
        <label class="form__label"
               for="name"
        >
        </label>
        <input class="form__input"
               type="text"
               id="name"
               name="name"
               placeholder="Person Name"
               required
        >
    </div>

    <button class="button button_primary"
            type="submit"
    >
        Add new
    </button>
</form>
